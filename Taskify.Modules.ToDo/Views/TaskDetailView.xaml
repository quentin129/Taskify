<UserControl x:Class="Taskify.Modules.ToDo.Views.TaskDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Taskify.Modules.ToDo.Views"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d"
             Height="600"
             Width="600"
             BorderBrush="Black"
             BorderThickness="2">
    <UserControl.Effect>
        <DropShadowEffect Color="Black"
                          BlurRadius="10"
                          ShadowDepth="5"
                          Opacity="0.5" />
    </UserControl.Effect>

    <Grid Background="#C4DAD2">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"
                           PreviewMouseLeftButtonDown="RowDefinition_PreviewMouseLeftButtonDown" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    Panel.ZIndex="1"
                    Margin="0 5 5 0"
                    HorizontalAlignment="Right">
            <Button Content="X"
                    Margin="0 0 5 0"
                    Style="{StaticResource PinWindowButton}"
                    Command="{Binding }" />
            <Button Content="X"
                    Style="{StaticResource CloseWindowButton}"
                    Command="{Binding CloseDialogCommand}" />
        </StackPanel>

        <GroupBox Grid.Row="1"
                  Margin="75 0"
                  Header="Title">
            <TextBox Text="{Binding Task.Title}"
                     VerticalContentAlignment="Center" />
        </GroupBox>
    </Grid>
</UserControl>
